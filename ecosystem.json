{
  "apps": [{
    "name": "xlsx-koa",
    "script": "./server/server.js",
    "cwd": "./",
    "watch": true,
    "node_args": "--harmony",
    "instances": "max",
    "exec_mode": "cluster",
    "max_memory_restart" : "150M",
    "ignore_watch": [
      "node_modules",
      "logs"
    ],
    "watch_options": {
      "followSymlinks": false
    },
    "error_file": "./logs/app-err.log",
    "out_file": "./logs/app-out.log",
    "env": {
        "NODE_ENV": "production"
    },
    "env_production" : {
      "NODE_ENV": "production"
    }
  }]
}
